-+@{
    ViewBag.Title = "MyLayout";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    
    @Scripts.Render("~/cours")
</head>
<body>
    <h2>@ViewBag.Title</h2>
  
    

    @RenderBody()
    @{var s1= RenderSection("MaPremierSection");}
    @s1<br />
    @if (IsSectionDefined("MaDeuxiemeSection"))
    {
        @RenderSection("MaDeuxiemeSection")
    }
    else{
        <p>pas de section 2</p>
    }
    

    <footer>
        <p>&copy; @DateTime.Now.Hour:@DateTime.Now.Minute - MyLayout</p>
    </footer>
</body>
   </html>

